WITH myquery AS (
SELECT user.id AS id, COUNT(*) AS count
FROM GleambookUsers user, GleambookMessages msg
WHERE msg.author_id = user.id
AND user.user_since >= 
DATETIME(
@PARAM
)
AND user.user_since < 
DATETIME(
@PARAM
)
AND msg.send_time >=
DATETIME(
@PARAM
)
AND msg.send_time <
DATETIME(
@PARAM
)
GROUP BY user.id
ORDER BY count DESC
LIMIT 10
) SELECT COUNT(*) FROM myquery;
